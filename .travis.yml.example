language: node_js
node_js: 12

cache:
  directories:
  - "$HOME/.sonar/cache"
addons:
  sonarcloud:
    organization: admitech

stages:
  - tests
  - name: deploy
    if: branch =~ /^(master|dev)$/

jobs:
  include:
  - stage: tests
    name: tests and sonar analysis
    script:
      - npm test
      - sonar-scanner -D sonar.login=$SONAR_TOKEN
  - stage: tests
    name: lint
    script: npm run lint
  - stage: tests
    name: compile
    script: npm build
  - stage: deploy
    name: ship to dokku
    script: skip
    before_deploy:
    - openssl aes-256-cbc -K $encrypted_7d71b9d7d791_key -iv $encrypted_7d71b9d7d791_iv -in deploy.key.enc -out deploy.key -d
    deploy:
      - provider: script
        skip_cleanup: true
        script: bash .travis/deploy.sh staging
        on:
          branch: dev
      - provider: script
        skip_cleanup: true
        script: bash .travis/deploy.sh production
        on:
          branch: master


env:
  global:
    secure: 

